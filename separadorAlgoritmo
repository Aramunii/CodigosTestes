package javaapplication2;

import javax.swing.JOptionPane;

/**
 *
 * @author Aramuni
 */
 
public class JavaApplication2 {

    /
    public static int Vetor[] = new int[8];
    public static String binario;

    public static void entrada() {

        binario = JOptionPane.showInputDialog("Qual Ã© o numero binario?"); // ARMAZENA O BINARIO EM UMA STRING
        converter();
    }

    public static void converter() {
        String[] bin = binario.split("");  // USA O SPLIT PARA SEPARAR A STRING

        for (int i = 0; i < bin.length; i++) {
            Vetor[i] = Integer.parseInt(bin[i]); // PASSA O STRING PARA INT USANDO O FOR
            System.out.println(Vetor[i]); // IMPRIME NA TELA O BINARIO SEPARADO EM CADA VETOR
        }

    }

    public static void main(String[] args) {
        // TODO code application logic here
        entrada();

    }

}
